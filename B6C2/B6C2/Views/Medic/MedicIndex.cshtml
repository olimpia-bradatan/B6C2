@model IEnumerable<B6C2.Medic>

@{
    ViewBag.Title = "Medics List";
}

<h2>Medics' List</h2>


<p>
    @Html.ActionLink("Create new medic", "MedicCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>

            <td>
                @Html.ActionLink("Edit", "MedicEdit", new { id = item.idMedic }) |
                @Html.ActionLink("Details", "MedicDetails", new { id = item.idMedic }) |
                @Html.ActionLink("Delete", "MedicDelete", new { id = item.idMedic })
            </td>
        </tr>
    }

</table>
