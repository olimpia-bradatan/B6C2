@model B6C2.donorTransaction

@{
    ViewBag.Title = "DonorTransactionEdit";
}

<h2>DonorTransactionEdit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>donorTransaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.idCenter)
        @Html.HiddenFor(model => model.cnpDonor)
        @Html.HiddenFor(model => model.donationDate)

        <div class="form-group">
            @Html.LabelFor(model => model.status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Status", new List<SelectListItem>
               {
                new SelectListItem { Text = "Prelevare", Value = "Prelevare"},
                new SelectListItem { Text = "Acceptat", Value = "Acceptat"},
                new SelectListItem { Text = "Distrus", Value = "Distrus"},
               }, "Select the status of the donor transaction")
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.analysisStatus, "Analysis Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("analysisStatus", new List<SelectListItem>
               {
                new SelectListItem { Text = "Analize pozitive", Value = "Pozitive"},
                new SelectListItem { Text = "Analize negative", Value = "Negative"},
               }, "Select the analysis status of the donor transaction")
                @Html.ValidationMessageFor(model => model.analysisStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
