<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B6C2 - HomePage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.IsInRole("Donor"))
                    {
                        <li>@Html.ActionLink("Donate!", "CreateDonatingForm", "DonatingForm")</li>
                        <li>@Html.ActionLink("My details", "DonorIndex", "Donor")</li>
                        <li>@Html.ActionLink("Donation status", "donorTransactionIndex", "donorTransaction")</li>
                    }
                    @if (User.IsInRole("Medic"))
                    {
                        <li>@Html.ActionLink("Request Blood", "RequestBloodCreate", "RequestBlood")</li>
                        <li>@Html.ActionLink("Transactions states", "TransactionIndex", "Transaction")</li>
                    }
                    @if (User.IsInRole("CentreEmployee"))
                    {
                        <li>@Html.ActionLink("View blood resource", "BloodResourceIndex", "BloodResource")</li>
                        <li>@Html.ActionLink("Donors in this centre", "DonorIndex", "Donor")</li>
                        <li>@Html.ActionLink("Nearest donors", "DonationCenterIndex", "DonationCenter")</li>
                        <li>@Html.ActionLink("Donor transactions", "donorTransactionIndex", "donorTransaction")</li>
                        <li>@Html.ActionLink("Hospitals requests", "TransactionIndex", "Transaction")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Manage donation centers", "DonationCenterIndex", "DonationCenter")</li>
                        <li>@Html.ActionLink("Manage hospitals", "HospitalIndex", "Hospital")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blood Gestion Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
