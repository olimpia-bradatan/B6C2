@model B6C2.Transaction

@{
    ViewBag.Title = "TransactionEdit";
}

<h2>TransactionEdit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("status", new List<SelectListItem>
               {
                new SelectListItem { Text = "Prelevare", Value = "Prelevare"},
                new SelectListItem { Text = "Pregatire", Value = "Pregatire"},
                new SelectListItem { Text = "Distribuire", Value = "Distribuire"},
               }, "Select status")
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.idTransaction)
        @Html.HiddenFor(model => model.quantity)
        @Html.HiddenFor(model => model.idCenter)
        @Html.HiddenFor(model => model.idBlood)
        @Html.HiddenFor(model => model.idHospital)
        @Html.HiddenFor(model => model.idPatient)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to the Transactions List", "TransactionIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
