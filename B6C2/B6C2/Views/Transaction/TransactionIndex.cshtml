@model IEnumerable<B6C2.Transaction>

@{
    ViewBag.Title = "TransactionIndex";
}

<h2>Transactions' List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Blood.group)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Blood.RH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.donationCenter.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.severity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blood.group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blood.RH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.donationCenter.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.severity)
            </td>
            <td>
                @Html.ActionLink("Details", "TransactionDetails", "Transaction", new { id = item.idTransaction }, null)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Go back to home", "Index", "Home")
</p>
