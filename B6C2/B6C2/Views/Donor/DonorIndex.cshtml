@model IEnumerable<B6C2.Donor>

@{
    ViewBag.Title = "DonorIndex";
}

<h2>Donors' List</h2>

<p>
    @Html.ActionLink("Add new donor", "DonorCreate")
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        @TempData["Success"].ToString()
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.birthDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.birthDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "DonorEdit", new { id=item.idDonor }) |
            @Html.ActionLink("Details", "DonorDetails", new { id=item.idDonor }) |
            @Html.ActionLink("Delete", "DonorDelete", new { id=item.idDonor })
        </td>
    </tr>
}

</table>
