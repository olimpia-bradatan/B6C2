@{
    ViewBag.Title = "HomePage";
}

<div class="jumbotron text-center">
    <h1>Medical Centre</h1>
    <p class="lead"> This is the description of this medical centre!</p>
</div>
@if (TempData["SuccessRegistration"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessRegistration"].ToString() @User.Identity.Name
    </div>
    TempData["SuccessRegistration"] = null;
}
<div class="container">
    <div class="row">
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="col-sm-4">
                <h6>First time here? Register as a new donor</h6>
                <button type="button" class="btn btn-primary" onclick="location.href= '@Url.Action("RegisterDonor", "Account")'">Register</button>
            </div>
            <div class="col-sm-4">
                <h6>First time here? Register as a new medic</h6>
                <button type="button" class="btn btn-primary" onclick="location.href= '@Url.Action("RegisterMedic", "Account")'">Register</button>
            </div>

            <div class="col-sm-4">
                <h6>First time here? Register as a new employee</h6>
                <button type="button" class="btn btn-primary" onclick="location.href= '@Url.Action("RegisterCentreEmployee", "Account")'">Register</button>
            </div>

            <div class="col-sm-10">
                <h6>Login</h6>
                <button type="button" class="btn btn-primary" onclick="location.href= '@Url.Action("Login", "Account")'">Login</button>
            </div>
        }
    </div>
</div>